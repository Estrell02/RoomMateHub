<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_layout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@drawable/wave__7_"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="238dp"
        android:layout_height="216dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo3" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="33dp"
            android:text="Se connecter"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icons8_user_16"
            android:hint="Nom d'utilisateur"
            android:inputType="text"
            android:background="@drawable/border_shape"
            android:layout_marginTop="16dp"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            android:padding="6dp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icons8_mot_de_passe_16"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:background="@drawable/border_shape"
            android:layout_marginTop="12dp"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            android:padding="6dp" />
        <TextView
            android:id="@+id/link_mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mot de passe oubliÃ©?"
            android:textColor="@color/purple_500"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:text="Se connecter"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_marginTop="18dp"
            app:cornerRadius="20dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/link_newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nouvel utilisateur? S'inscrire"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />



    </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
</ScrollView>